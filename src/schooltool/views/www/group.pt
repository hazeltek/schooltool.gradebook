<group xmlns:xlink="http://www.w3.org/1999/xlink"
       xmlns:tal="http://xml.zope.org/namespaces/tal">
  <name tal:content="context/title">group</name>
  <item tal:repeat="item view/listItems"
      xlink:type="simple"
      tal:attributes="xlink:href item/path;
                      xlink:title item/title"
    />
  <relationships xlink:type="simple" xlink:title="Relationships"
      tal:attributes="xlink:href string:${view/context/__name__}/relationships"
      />
  <facets xlink:type="simple" xlink:title="Facets"
      tal:attributes="xlink:href string:${view/context/__name__}/facets"
      />
</group>
