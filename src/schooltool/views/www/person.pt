<person xmlns:xlink="http://www.w3.org/1999/xlink"
        xmlns:tal="http://xml.zope.org/namespaces/tal">
  <name tal:content="view/context/title">Pete</name>
  <groups>
    <item tal:repeat="group view/getGroups"
          xlink:type="simple"
          tal:attributes="xlink:title group/title;
	                  xlink:href group/path"
	  />
  </groups>
  <relationships xlink:type="simple" xlink:title="Relationships"
      tal:attributes="xlink:href string:${view/context/__name__}/relationships"
      />
  <facets xlink:type="simple" xlink:title="Facets"
      tal:attributes="xlink:href string:${view/context/__name__}/facets"
      />
  <timetables xlink:type="simple" xlink:title="Own timetables"
      tal:attributes="xlink:href string:${view/context/__name__}/timetables"
      />
  <composite xlink:type="simple" xlink:title="Composite timetables"
      tal:attributes="xlink:href string:${view/context/__name__}/composite-timetables"
      />
</person>
